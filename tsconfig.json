{
  "compilerOptions": {
    // ✅ Use modern JS features (required for .entries(), async/await, etc.)
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],

    // ✅ Next.js + Amplify Gen 2 compatible
    "module": "ESNext",
    "moduleResolution": "Bundler",

    // ✅ Iteration helpers fix
    "downlevelIteration": true,

    // ✅ Modern type safety
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",

    // ✅ Performance and tooling
    "incremental": true,
    "baseUrl": ".",
    // ✅ Path alias support
    "paths": {
      "@/*": ["./*"]
    },

    // ✅ Plugin for Next.js type checking
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/postcss.config.mjs",
    "amplify_outputs.json",
    "amplify/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
